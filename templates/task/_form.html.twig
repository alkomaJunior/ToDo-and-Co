{{ form_start(form) }}
    <div class="form-group">
        <i class="fa fa-tasks"></i>&nbsp;&nbsp;
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'placeholder': 'Task title'|trans}}) }}
    </div>
    <div class="form-group">
        <i class="fa fa-audio-description"></i>&nbsp;&nbsp;
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'placeholder': 'Task description'|trans}}) }}
    </div>
    <div class="form-group row">
        <div class="col-md-6 pb-3">
            <button type="submit" id="{{ Action|default('Add a task'|trans) }}" class="btn btn-primary btn-block" formnovalidate><i class="fa fa-check"></i>&nbsp;&nbsp;{{ Action|default('Add a task'|trans) }}</button>
        </div>
        <div class="col-md-6">
            <button type="reset" class="btn btn-secondary btn-block"><i class="fa fa-ban"></i>&nbsp;&nbsp;{{ 'Cancel'|trans }}</button>
        </div>
    </div>
{{ form_end(form) }}
