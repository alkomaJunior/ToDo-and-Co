{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} m-5 text-center" role="alert">
            <i class="fa fa-bell-slash"></i>&nbsp;&nbsp;{{ message }}
        </div>
        <script>
            setInterval(
                function(){
                    location.reload()
                },3000);
        </script>
    {% endfor %}
{% endfor %}