<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button" data-toggle="tooltip" data-placement="top" title="{{ 'Full screen'|trans }}">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#modal{{ app.user.id }}" role="button" data-toggle="modal" data-placement="top" title="{{ 'My profile'|trans }}">
                <i class="fas fa-user-alt-slash"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_logout') }}" role="button" data-toggle="tooltip" data-placement="top" title="{{ 'Logout'|trans }}">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </li>
    </ul>
</nav>
<!-- /.navbar -->

<div class="modal fade" id="modal{{ app.user.id }}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{ 'My profile'|trans }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            {{ app.user.accountType }}
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>{{ app.user.firstName~' '~app.user.lastName }}</b></h2>
                                    <p class="text-muted text-sm"><b>{{ 'Email address'|trans }}: </b> {{ app.user.email }} </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> {{ app.user.location }}</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> {{ app.user.contact }}</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="{% if app.user.avatar is not null %}
                                                    {{ vich_uploader_asset(app.user, 'avatarFile')|imagine_filter('avatar_sidebar') }}
                                              {% else %}
                                                   {{ asset('build/app/images/default-pp.png')|imagine_filter('avatar_sidebar') }}
                                              {% endif %}" alt="user-avatar" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
